{
  	"name": "Session Life Saver",
  	"version": "0.1",
  	"manifest_version": 2,
  	"options_page": "options.html",
    "permissions": 
	[
	    "http://*/",
	    "https://*/",
    	"tabs",
    	"cookies"
	],
	"background" : {
        "scripts" : ["background.js", "jquery-1.7.2.min.js"]
    },
	"icons": { 
        "48": "logo48.png", 
        "128": "logo128.png"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
